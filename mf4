TOPDIR = $(shell pwd)
CPP = g++

DIR_INC = ./include
DIR_SRC = ./src
DIR_OBJ = ./obj
DIR_BIN = ./bin

CPPFLAGS = -I./include

SRC = $(wildcard $(DIR_SRC)/*.cpp)
DIR = $(notdir $(SRC))
OBJ = $(patsubst %.cpp, $(DIR_OBJ)/%.o, $(notdir $(SRC)))

main: $(OBJ)
	$(CPP) 

dbgprint:
	@echo $(SRC)
	@echo $(DIR)
	@echo $(OBJ)